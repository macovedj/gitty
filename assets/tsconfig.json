{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "preserve",
    "baseUrl": "web/static/js",
    "moduleResolution": "node",
    "outDir": "./ts-build",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true
  },
  "exclude": [
      "node_modules",
      "priv",
      "ts-build"
  ]
}